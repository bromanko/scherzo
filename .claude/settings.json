{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "gleam format src test 2>/dev/null; gleam format --check src test 2>/dev/null || echo 'Warning: Gleam formatting failed'"
          },
          {
            "type": "command",
            "command": "nixfmt *.nix 2>/dev/null || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.gleam ]]; then gleam format \"$CLAUDE_TOOL_ARG_FILE_PATH\"; fi"
          },
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.nix ]]; then nixfmt \"$CLAUDE_TOOL_ARG_FILE_PATH\" 2>/dev/null; fi"
          }
        ]
      }
    ]
  }
}
